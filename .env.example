# Example environment variables for Home Network Monitoring stack
# Copy to .env and replace placeholder values

# InfluxDB
INFLUX_URL=http://influxdb:8086
INFLUX_ORG=home-net
INFLUX_BUCKET=network_metrics
INFLUX_TOKEN=supersecrettoken

# UniFi Controller
UNIFI_CONTROLLER=https://192.168.1.1:8443
UNIFI_USER=admin
UNIFI_PASS=password

# MikroTik Router
MIKROTIK_HOST=192.168.1.2
MIKROTIK_USER=admin
MIKROTIK_PASS=password

# Polling interval in seconds (overrides config.yaml)
POLL_INTERVAL=60

# Alerting email contact (Grafana)
ALERTS_EMAIL_TO=you@example.com
ALERTS_EMAIL_PASS=app_password
